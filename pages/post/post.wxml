<form bindsubmit="formsubmit">
  <view class='postpadding'>
    姓名<input placeholder='在这输入姓名' style="float:right;" name="input"></input>
  </view>

  <view class='postpadding'>
  <radio-group name="radiogroup">
    <radio value='1'>男</radio>
    <radio value='0'>女</radio>
  </radio-group>
  </view>
  
  <view class='postpadding'>
      <slider  min='0' max='100' show-value='true' name="slider"></slider>
  </view>

  <view class='postpadding'>
    <textarea style='border:2px solid #000' name="textarea" focus='true' placeholder='这是个输入框' />
  </view>

  <view class='postpadding' >
    <button class='postpadding' form-type="submit" >submit</button>
  </view>
</form>

