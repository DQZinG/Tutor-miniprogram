/* pages/post/post.wxss */
.userinfo {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	width: 100%;
	height: 300rpx;
	
	border-top: 2rpx solid #888888;
	border-bottom: 2rpx solid #888888;
}

.userAvatar {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	overflow: hidden;
	display: flex;
}

.mylist {
	height: 80rpx;
	margin: 15rpx auto;
	padding-left: 75rpx;
	line-height: 80rpx;
	
	border-top: 2rpx solid #888888;
	border-bottom: 2rpx solid #888888;
}